@model IEnumerable<FirstChoiceSystems.Models.ViewModels.MarketPlaceItemViewModels>

@{
    ViewBag.Title = "YourMarketPlaceItems";
}

<h2>YourMarketPlaceItems</h2>

<h2>All Items Up For Sale</h2>

<table class="table">
    <tr>
        <th> </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Seller)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td> @Html.ActionLink("View Item", "MarketPlaceItem", "MarketPlace", new { itemId = item.ItemId }, null)</td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seller)
            </td>
        </tr>
    }

</table>
