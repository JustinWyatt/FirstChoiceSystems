@model IEnumerable<FirstChoiceSystems.Models.ViewModels.ItemViewModel>

@{
    ViewBag.Title = "PurchaseRequestHistory";
}

<h2>Current User's Purchase Request History</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ItemDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Seller)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>@Html.ActionLink("View Item", "ItemDetails", "Inventory", new { itemId = item.ItemId })</tr>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seller)
            </td>
        </tr>
    }

</table>
